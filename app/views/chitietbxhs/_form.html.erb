
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(@chitietbxh) do |f| %>
		  <% if @chitietbxh.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@chitietbxh.errors.count, "error") %> prohibited this chitietbxh from being saved:</h2>
		
		      <ul>
		      <% @chitietbxh.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="field">
		    <%= f.label :thuhang,"Rating number" %><br>
		    <%= f.text_field :thuhang , :class=>"form-control"%>
		  </div>
		  <div class="field">
		    <%= f.label :sotranthidau, "Number of match played" %><br>
		    <%= f.text_field :sotranthidau , :class=>"form-control"%>
		  </div>
		  <div class="field">
		    <%= f.label :diem, "Point" %><br>
		    <%= f.text_field :diem, :class=>"form-control" %>
		  </div>
		  <div class="field">
		    <%= f.label :tongsobanthua, "Sum of lost goal" %><br>
		    <%= f.text_field :tongsobanthua, :class=>"form-control" %>
		  </div>
		  <div class="field">
		    <%= f.label :tongsobanthang, "Sum of goal"%><br>
		    <%= f.text_field :tongsobanthang , :class=>"form-control"%>
		  </div>
		  <div class="field">
		    <%= f.label :sotranthang, "Number of Win" %><br>
		    <%= f.text_field :sotranthang , :class=>"form-control"%>
		  </div>
		  <div class="field">
		    <%= f.label :sotranghoa , "Number of Draw"%><br>
		    <%= f.text_field :sotranghoa, :class=>"form-control" %>
		  </div>
		  <div class="field">
		    <%= f.label :sotrangthua , "Number of Lost"%><br>
		    <%= f.text_field :sotrangthua, :class=>"form-control" %>
		  </div>


		  <div class="field">
		   <%= f.label :bangxephang_id, "Stat" %><br>    
			    <%= f.select(:bangxephang_id,[],{},{:class =>"form-control"} ) do %>
			  		<% Bangxephang.all.each do |c| -%>
			    	<%= content_tag(:option, Vongdau.where(:id=>c.id).first.stt, value: c.id) %>
			  	<% end %>
				<% end %>
		  </div>
		  <div class="field">
		   <%= f.label :doibong_id, "Club"%><br>    
			    <%= f.select(:doibong_id,[],{},{:class =>"form-control"} ) do %>
			  		<% Doibong.all.each do |c| -%>
			    	<%= content_tag(:option, c.ten, value: c.id) %>
			  	<% end %>
				<% end %>
		  </div>
		  <div class="field">
		   <%= f.label :lenxuonghang_id, "Rating" %><br>    
			    <%= f.select(:lenxuonghang_id,[],{},{:class =>"form-control"} ) do %>
			  		<% Lenxuonghang.all.each do |c| -%>
			    	<%= content_tag(:option, c.ten, value: c.id) %>
			  	<% end %>
				<% end %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Submit", :class=>"btn btn-success"%>
		  </div>
		<% end %>
	</div>
</div>
