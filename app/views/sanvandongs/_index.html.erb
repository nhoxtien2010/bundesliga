<h1 class="text-center">Listing stadiums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Capacity:</th>
      <th>Address:</th>
      <th>Club:</th>
      <th>Name:</th>
      <th>Image 1:</th>
      <th>Image 2:</th>
      <th>Image 3:</th>
      <th>Infomation:</th>
      <th>Extra infomation:</th>
      <th>Year of celebrate:</th>
      <th>Sticker:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sanvandongs.each do |sanvandong| %>
        <td><%=image_tag "sanvandong/"+sanvandong.hinhanh.to_s,:class => "round-image-50" %></td>
        <td><%=image_tag "sanvandong/"+sanvandong.hinhanh1.to_s,:class => "round-image-50" %></td>
        <td><%=image_tag "sanvandong/"+sanvandong.hinhanh2.to_s,:class => "round-image-50" %></td>
        <td><%= sanvandong.thongtin %></td>
        <td><div><%= sanvandong.chitietthongtin %></div></td>
        <td><%= sanvandong.thanhlap %></td>
        <td><%= sanvandong.ve %></td>
        <td><%= link_to 'Show', sanvandong %></td>
        <td><%= link_to 'Edit', edit_sanvandong_path(sanvandong) %></td>
        <td><%= link_to 'Destroy', sanvandong, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

