<h1 class="text-center">Listing Stats</h1>

<table>
  <thead>
    <tr>
      <th>Number of Round</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @bangxephangs.each do |bangxephang| %>
      <tr>
        <td><%= Vongdau.where(:id=>bangxephang.vongdau).first.stt %></td>
        <td><%= link_to 'Show', bangxephang %></td>
        <td><%= link_to 'Edit', edit_bangxephang_path(bangxephang) %></td>
        <td><%= link_to 'Destroy', bangxephang, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

